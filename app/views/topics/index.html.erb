<div class="panel-header">
  <h1>
    Topics 
    <%= link_to new_topic_path, class: 'btn btn-success' do %>
          <i class="glyphicon glyphicon-asterisk"></i> New Topic
    <% end %>
  </h1><br/>
</div>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %><br/>
            <%= topic.posts.count %> Posts
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @topics %>
  </div>
</div>